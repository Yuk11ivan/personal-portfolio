/* ===== 首页横幅 ===== */
.hero {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  padding: 100rpx 20rpx 50rpx;
  background: linear-gradient(135deg, var(--bg-light) 0%, var(--bg-white) 100%);
  overflow: hidden;
}

.hero-content {
  max-width: 1200rpx;
  width: 100%;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 160rpx;
  align-items: center;
  z-index: 1;
  position: relative;
}

.hero-left {
  display: flex;
  justify-content: center;
  align-items: center;
}

.profile-image-container {
  position: relative;
  width: 600rpx;
  height: 600rpx;
  border-radius: 50%;
  overflow: hidden;
  box-shadow: var(--shadow-hover);
  border: 10rpx solid var(--primary-blue);
  background: var(--bg-light);
}

.profile-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.image-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, var(--light-blue), var(--primary-blue));
  color: white;
  text-align: center;
  padding: 40rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.image-placeholder .icon {
  font-size: 160rpx;
  margin-bottom: 40rpx;
}

.hero-right {
  text-align: left;
}

.hero-name {
  font-size: 160rpx;
  font-weight: bold;
  color: var(--text-dark);
  margin-bottom: 40rpx;
  background: linear-gradient(135deg, var(--primary-blue), var(--light-blue));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.hero-subtitle {
  font-size: 60rpx;
  color: var(--text-gray);
  margin-bottom: 80rpx;
}

.hero-stats {
  display: flex;
  gap: 120rpx;
}

.stat-item {
  text-align: center;
}

.stat-number {
  display: block;
  font-size: 120rpx;
  font-weight: bold;
  color: var(--primary-blue);
  line-height: 1;
}

.stat-label {
  display: block;
  font-size: 40rpx;
  color: var(--text-gray);
  margin-top: 20rpx;
}

.scroll-indicator {
  position: absolute;
  bottom: 60rpx;
  left: 50%;
  transform: translateX(-50%);
  animation: bounce 2s infinite;
  color: var(--primary-blue);
  font-size: 60rpx;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateX(-50%) translateY(0);
  }
  40% {
    transform: translateX(-50%) translateY(-40rpx);
  }
  60% {
    transform: translateX(-50%) translateY(-20rpx);
  }
}

/* ===== 基本信息区 ===== */
.info-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(560rpx, 1fr));
  gap: 80rpx;
}

.info-card {
  background: white;
  padding: 80rpx;
  border-radius: 30rpx;
  box-shadow: var(--shadow);
  transition: all 0.3s ease;
  text-align: center;
  border: 4rpx solid transparent;
}

.info-card:hover {
  transform: translateY(-20rpx);
  box-shadow: var(--shadow-hover);
  border-color: var(--primary-blue);
}

.info-card .icon {
  font-size: 100rpx;
  color: var(--primary-blue);
  margin-bottom: 40rpx;
  display: block;
}

.card-title {
  font-size: 48rpx;
  margin-bottom: 20rpx;
  color: var(--text-dark);
  display: block;
}

.card-content {
  color: var(--text-gray);
  font-size: 40rpx;
  display: block;
}

.douyin-card {
  grid-column: span 2;
  background: linear-gradient(135deg, #ff0050, #ff4081);
  color: white;
}

.douyin-card .icon {
  color: white;
}

.douyin-card .card-title,
.douyin-card .card-content {
  color: white;
}

.douyin-name {
  font-size: 60rpx;
  font-weight: bold;
  margin: 20rpx 0;
  display: block;
}

.douyin-desc {
  font-size: 36rpx;
  margin: 40rpx 0;
  opacity: 0.9;
  display: block;
}

.douyin-link {
  display: inline-block;
  margin-top: 40rpx;
  padding: 32rpx 80rpx;
  background: white;
  color: #ff0050;
  border-radius: 100rpx;
  text-decoration: none;
  font-weight: bold;
  transition: all 0.3s ease;
  font-size: 40rpx;
}

.douyin-link:hover {
  transform: scale(1.05);
  box-shadow: 0 16rpx 60rpx rgba(255, 255, 255, 0.3);
}

/* ===== 教育背景区 ===== */
.education-timeline {
  max-width: 1600rpx;
  margin: 0 auto;
  position: relative;
  padding-left: 80rpx;
}

.education-timeline::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  background: linear-gradient(180deg, var(--primary-blue), var(--light-blue));
}

.timeline-item {
  position: relative;
  margin-bottom: 120rpx;
}

.timeline-marker {
  position: absolute;
  left: -42rpx;
  top: 0;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background: var(--primary-blue);
  border: 6rpx solid white;
  box-shadow: 0 0 0 6rpx var(--primary-blue);
}

.timeline-content {
  background: white;
  padding: 80rpx;
  border-radius: 30rpx;
  box-shadow: var(--shadow);
  margin-left: 40rpx;
}

.timeline-title {
  font-size: 60rpx;
  color: var(--primary-blue);
  margin-bottom: 40rpx;
  display: block;
}

.education-details {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.school-name, .major {
  font-size: 44rpx;
  color: var(--text-dark);
  margin: 20rpx 0;
  display: block;
}

.courses {
  margin: 60rpx 0;
}

.courses-title {
  color: var(--text-dark);
  margin-bottom: 20rpx;
  font-size: 44rpx;
  display: block;
}

.course-item {
  padding: 20rpx 0;
  padding-left: 60rpx;
  position: relative;
  color: var(--text-gray);
  font-size: 40rpx;
  display: block;
}

.course-item::before {
  content: '▸';
  position: absolute;
  left: 0;
  color: var(--primary-blue);
  font-size: 48rpx;
}

.gpa-info {
  display: flex;
  gap: 40rpx;
  margin-top: 40rpx;
  flex-wrap: wrap;
}

.gpa-badge, .rank-badge {
  padding: 20rpx 40rpx;
  background: var(--bg-light);
  border-radius: 80rpx;
  color: var(--primary-blue);
  font-weight: bold;
  display: inline-flex;
  align-items: center;
  gap: 20rpx;
  font-size: 40rpx;
}

.rank-badge {
  background: linear-gradient(135deg, var(--primary-blue), var(--light-blue));
  color: white;
}

/* ===== 专业技能区 ===== */
.skills-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(500rpx, 1fr));
  gap: 80rpx;
}

.skill-category {
  background: white;
  padding: 80rpx;
  border-radius: 30rpx;
  box-shadow: var(--shadow);
  transition: all 0.3s ease;
}

.skill-category:hover {
  transform: translateY(-20rpx);
  box-shadow: var(--shadow-hover);
}

.skill-header {
  display: flex;
  align-items: center;
  gap: 40rpx;
  margin-bottom: 60rpx;
  padding-bottom: 40rpx;
  border-bottom: 4rpx solid var(--border-color);
}

.skill-header .icon {
  font-size: 80rpx;
  color: var(--primary-blue);
}

.skill-category-title {
  font-size: 52rpx;
  color: var(--text-dark);
}

.skill-items {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.skill-item {
  display: flex;
  align-items: center;
  gap: 40rpx;
  padding: 32rpx;
  background: var(--bg-light);
  border-radius: 16rpx;
  transition: all 0.3s ease;
  font-size: 40rpx;
}

.skill-item:hover {
  background: var(--primary-blue);
  color: white;
  transform: translateX(20rpx);
}

.skill-item .icon {
  color: var(--primary-blue);
  font-size: 48rpx;
}

.skill-item:hover .icon {
  color: white;
}

/* ===== 兴趣方向区 ===== */
.interests-container {
  max-width: 1800rpx;
  margin: 0 auto;
}

.interest-section {
  margin-bottom: 120rpx;
}

.interest-section-title {
  font-size: 60rpx;
  color: var(--text-dark);
  margin-bottom: 60rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.interest-section-title .icon {
  color: var(--primary-blue);
}

.interest-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(400rpx, 1fr));
  gap: 60rpx;
}

.interest-item {
  background: white;
  padding: 60rpx;
  border-radius: 24rpx;
  box-shadow: var(--shadow);
  display: flex;
  align-items: center;
  gap: 40rpx;
  transition: all 0.3s ease;
  text-align: center;
  justify-content: center;
  font-size: 44rpx;
}

.interest-item:hover {
  transform: translateY(-20rpx);
  box-shadow: var(--shadow-hover);
  background: var(--primary-blue);
  color: white;
}

.interest-item .icon {
  font-size: 60rpx;
  color: var(--primary-blue);
}

.interest-item:hover .icon {
  color: white;
}

/* ===== 自我评价区 ===== */
.evaluation-content {
  max-width: 1600rpx;
  margin: 0 auto;
}

.evaluation-card {
  background: white;
  padding: 120rpx;
  border-radius: 30rpx;
  box-shadow: var(--shadow);
  position: relative;
  border-left: 10rpx solid var(--primary-blue);
}

.left-quote, .right-quote {
  position: absolute;
  font-size: 120rpx;
  color: var(--primary-blue);
  opacity: 0.3;
}

.left-quote {
  top: 40rpx;
  left: 40rpx;
}

.right-quote {
  bottom: 40rpx;
  right: 40rpx;
}

.evaluation-content-text {
  font-size: 44rpx;
  line-height: 2;
  color: var(--text-gray);
  text-align: justify;
  padding: 40rpx 0;
  display: block;
}

/* ===== 页脚 ===== */
.footer {
  background: var(--text-dark);
  color: white;
  padding: 80rpx 0;
  text-align: center;
}

.footer text {
  margin-bottom: 40rpx;
  opacity: 0.8;
  display: block;
  font-size: 40rpx;
}

.footer-links {
  display: flex;
  justify-content: center;
  gap: 80rpx;
}

.footer-link {
  color: white;
  font-size: 60rpx;
  transition: all 0.3s ease;
}

.footer-link:hover {
  color: var(--primary-blue);
  transform: scale(1.2);
}

/* ===== 响应式设计 ===== */
@media (max-width: 750rpx) {
  .hero-content {
    grid-template-columns: 1fr;
    text-align: center;
  }

  .hero-name {
    font-size: 120rpx;
  }

  .hero-subtitle {
    font-size: 48rpx;
  }

  .profile-image-container {
    width: 500rpx;
    height: 500rpx;
    margin: 0 auto 80rpx;
  }

  .hero-stats {
    justify-content: center;
  }

  .info-grid {
    grid-template-columns: 1fr;
  }

  .douyin-card {
    grid-column: span 1;
  }

  .skills-grid {
    grid-template-columns: 1fr;
  }

  .interest-grid {
    grid-template-columns: 1fr;
  }

  .section-title {
    font-size: 80rpx;
  }

  .education-timeline {
    padding-left: 60rpx;
  }

  .timeline-content {
    margin-left: 20rpx;
  }
}

@media (max-width: 480rpx) {
  .hero-name {
    font-size: 80rpx;
  }

  .hero-subtitle {
    font-size: 36rpx;
  }

  .stat-number {
    font-size: 80rpx;
  }

  .section-title {
    font-size: 60rpx;
  }
  
  .profile-image-container {
    width: 400rpx;
    height: 400rpx;
    margin: 0 auto 60rpx;
  }
}