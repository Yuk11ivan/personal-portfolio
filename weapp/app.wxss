/* ===== 全局样式 ===== */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

page {
  --primary-blue: #0066ff;
  --dark-blue: #0044cc;
  --light-blue: #3399ff;
  --bg-white: #ffffff;
  --bg-light: #f5f8ff;
  --text-dark: #1a1a2e;
  --text-gray: #666;
  --border-color: #e0e8ff;
  --shadow: 0 4px 20px rgba(0, 102, 255, 0.1);
  --shadow-hover: 0 8px 30px rgba(0, 102, 255, 0.2);
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  line-height: 1.6;
  color: var(--text-dark);
  background-color: var(--bg-white);
  overflow-x: hidden;
}

.container {
  max-width: 1200rpx;
  margin: 0 auto;
  padding: 0 40rpx;
}

/* ===== 通用区块样式 ===== */
.section {
  padding: 160rpx 0;
  position: relative;
}

.section-alt {
  background-color: var(--bg-light);
}

.section-title {
  font-size: 80rpx;
  text-align: center;
  margin-bottom: 120rpx;
  color: var(--text-dark);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 40rpx;
}

.section-title .icon {
  color: var(--primary-blue);
  font-size: 80rpx;
}

/* ===== 响应式设计 ===== */
@media (max-width: 750rpx) {
  .container {
    padding: 0 20rpx;
  }
  
  .section {
    padding: 120rpx 0;
  }
  
  .section-title {
    font-size: 60rpx;
    margin-bottom: 80rpx;
  }
  
  .section-title .icon {
    font-size: 60rpx;
  }
}

@media (max-width: 480rpx) {
  .section {
    padding: 80rpx 0;
  }
  
  .section-title {
    font-size: 50rpx;
    margin-bottom: 60rpx;
  }
  
  .section-title .icon {
    font-size: 50rpx;
  }
}